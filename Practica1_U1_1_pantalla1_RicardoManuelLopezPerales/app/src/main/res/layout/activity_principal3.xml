<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="5"
    android:background="#eeeeee"
    tools:context=".Principal3">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#212121"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TPDM "
            android:textSize="30dp"
            android:layout_margin="10dp"
            android:textColor="#FFFFFF"
            android:padding="11dp"
            android:layout_gravity="left"
            />
        <ImageView
            android:src="@drawable/images"
            android:layout_width="450dp"
            android:layout_height="60dp"
            android:layout_margin="3dp"


            />


    </LinearLayout>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:padding="10dp"
        >
        <EditText android:hint="Nombres"
            android:ems="14"
            android:inputType="text"
            />
    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"

        >
        <EditText android:hint="Apellidos"
            android:ems="14"
            android:inputType="text"
            />
    </TableRow>
    <Space
        android:layout_height="10dp"
        android:layout_width="wrap_content"/>
    <TableRow
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView android:text="Estado Civil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20dp"/>

        <TextView android:text="Cargo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"

            android:textSize="20dp"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right">
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:entries="@array/estado"/>
        <Spinner
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:entries="@array/cargo"/>

    </TableRow>


</TableLayout>